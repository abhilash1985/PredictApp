<%- model_class = Prediction -%>
<%= image_tag(load_bg_image, { id: 'full-screen-background-image', size: '1366x768' }) %>

<%#= form_tag(update_match_question_tournament_path(@current_tournament), method: 'patch') do |f| %>
<%= form_for :match, url: update_match_question_tournament_path(@current_tournament), html: { method: 'post' } do |f| %>
  <div id="all_squads" class="center-block">
    <div class="page-header ind-body match-result text-center padding-top-10">
      <h4 class="prediction-results">
        <%=t '.title', default: I18n.t('menu.new_edit_match_questions') %>
      </h4>
    </div>

    <div class="center-block">
      <div class="container-fluid text-center team-details">
        <div class="row">
          <div class="col-sm-1">
            <label class="prediction-results control-label"></label>
          </div>
          <div class="col-sm-4">
            <div class="controls">
              <%= select_tag 'match_id',
                             options_from_collection_for_select(@matches, 'id', 'full_name', @current_match&.id),
                             id: 'select_prediction_match_question', class: 'form-control' %>
            </div>
          </div>
          <div class="col-sm-2">
            <%= hidden_field_tag :current_tournament_id, @current_tournament&.id %>
          </div>
        </div>
      </div>
      <hr />
      <div class="clear: both"></div>

      <div id="show-match-question">
        <%= render '/tournaments/match_questions/data' %>
      </div>
    </div>
  </div>
<% end %>