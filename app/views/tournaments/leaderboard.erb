<%= image_tag('background/background2.jpeg', { id: 'full-screen-background-image', size: '1366x768' }) %>
<div class="page-header ind-body match-result text-center">
  <h4 class="prediction-results">
    <%=t '.title', default: "#{leaderboard(params[:from])} - #{@current_tournament.name}" %>
  </h4>
</div>
<div class = "ind-body data-table">
<table class="table table-striped table-bordered text-center" id="leaderboard">
  <thead>
    <tr class="background-white">
      <th class="text-center btn-success">Sl No</th>
      <th class="text-center btn-success">User</th>
      <th class="text-center btn-success">Total Points</th>
      <th class="text-center btn-success">Paid Points</th>
      <th class="text-center btn-success">No.of Matches Predicted</th>
      <!-- <th class="text-center btn-success">No.of Zero Points</th> -->
      <th class="text-center btn-success">Prediction %</th>
    </tr>
  </thead>
  <tbody>
  	<% @leaderboards.each_with_index do |(key, value), index| %>
  	 <% index += 1 %>
      <tr class="background-white">
      	<td class="text-center"><%= index %></td>
      	<td class="text-left"><%= value[:name] %></td>
      	<td class="text-center"><%= value[:points] %></td>
        <td class="text-center"><%= value[:paid_points] %></td>
      	<td class="text-center"><%= value[:no_of_matches] %></td>
        <!-- <td class="text-center"><%#= value[:no_of_zero] %></td> -->
      	<td class="text-center"><%= value[:percentage] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
