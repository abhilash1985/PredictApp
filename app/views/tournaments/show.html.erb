<div class="container">
    <div class="row">
    <div class="col-md-12">
      <h3>Choose your Challenge</h3>
      <div class="tabbable-panel">
        <div class="tabbable-line">
          <ul class="nav nav-tabs ">
            <li class="active">
              <a href="#tab_default_1" data-toggle="tab">
              Current Challenges</a>
            </li>
            <li>
              <a href="#tab_default_2" data-toggle="tab">
              Previous Challenges </a>
            </li>
            <li>
              <a href="#tab_default_3" data-toggle="tab">
              Tab 3 </a>
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab_default_1">
              <% @current_challenges.each_with_index do |challenge, chlng_index| %>
                <section> <%= challenge.name %></section>
                <div class="container">
                  <div class="row">    
                    <% challenge.matches.each_with_index do |match, match_index| %>
                      <a href=<%="#new_modal_#{chlng_index}_#{match_index}"%> id =<%="#{chlng_index}_#{match_index}"%>  class = "modal_link" data-toggle="modal">
                      <div class="col-md-3">            
                        <div class="thumbnail">
                          <div class="caption">
                            <h4><%= match.match_no%></h4>
                            <p><%= match.team1.name%></p>
                            <p><%= image_tag('vs.png')%></p>
                            <p><%= match.team2.name%></p>
                          </div>
                          <%= image_tag("#{load_icon}")%>
                        </div>
                      </div>
                      </a>
                      <div class="modal fade" id=<%="modal_#{chlng_index}_#{match_index}"%> tabindex="-1" role="dialog">
                        <%= render partial:'modal_form', locals:{ match: match } %>
                      </div>
                    <% end -%>
                  </div>
                </div>
                <hr>
              <% end -%>
            </div>
            <div class="tab-pane" id="tab_default_2">
              <p>
                Howdy, I'm in Tab 2.
              </p>
              <p>
