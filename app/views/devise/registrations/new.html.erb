<%= image_tag 'welcome1.jpg', {id:'full-screen-background-image'}%>
<div class = "margin">

<div class="tab-pane col-md-offset-2 col-md-3">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:'form-horizontal') do |f| %>
              <%= devise_error_messages! %>
            <fieldset>
            <!-- Sign Up Form -->
            <!-- Text input-->
            <div class="control-group">
              <label class="control-label" for="Email">Email:</label>
              <div class="controls">
                 <%= f.email_field :email, autofocus: true, required:true, placeholder:'Email', class:'form-control' %>
              </div>
            </div>

            <!-- Text input-->
            <div class="control-group">
              <label class="control-label" for="userid">First Name:</label>
              <div class="controls">
                <%= f.text_field :first_name, required:true, placeholder:'First Name', class:'form-control' %>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label" for="userid">Middle Name:</label>
              <div class="controls">
                <%= f.text_field :middle_name, class:'form-control', placeholder:'Middle Name' %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="userid">Last Name:</label>
              <div class="controls">
                <%= f.text_field :last_name, required:true, class:'form-control', placeholder:'Last Name' %>
              </div>
            </div>

            <!-- Password input-->
            <div class="control-group">
              <label class="control-label" for="password">Password:</label>
              <div class="controls">
                  <% if @validatable %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %>
                  <%= f.password_field :password, autocomplete: "off", class:'form-control', placeholder:'Password' %>              </div>
            </div>

            <!-- Text input-->
            <div class="control-group">
              <label class="control-label" for="reenterpassword">Re-Enter Password:</label>
              <div class="controls">
                <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control', placeholder:'Re-Enter Password' %>
              </div>
            </div>

            <!-- Button -->
            <div class="control-group">
              <label class="control-label" for="confirmsignup"></label>
              <div class="controls">
               <%= f.submit "Sign Up", class:'btn btn-success' %>
              <span>
              <%= render "devise/shared/links" %>
              </span>

            </div>

            </fieldset>
            <% end -%>
      </div>

</div>