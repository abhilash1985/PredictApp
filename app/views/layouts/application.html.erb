<!DOCTYPE html>
<html>
<head>
  <title>FifaWorldCup2018</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> fade in">
      <a href="#" data-dismiss="alert" class="close">Ã—</a>
      <%= value %>
    </div>
  <% end %>
</div>
<% if user_signed_in? %>
  <nav class="navbar navbar-inverse" role="navigation" style = 'margin-bottom: 1px;'>
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <%= link_to 'Home', dashboard_index_path, class:'navbar-brand' %>
        <%= link_to @current_tournament.name, tournament_path(@current_tournament), class:'navbar-brand', style: 'color:#fff' %>
        <%= link_to 'Leaderboard', leaderboard_tournament_path(@current_tournament),
                                   class:'navbar-brand' %>
        <%#= link_to 'Knockout Board', leaderboard_tournament_path(@current_tournament, from: 'ko'),
                                   class:'navbar-brand' %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-megadropdown-tabs">
          <ul class="nav navbar-nav">
          <li><a href="#"></a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email%> <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li>
                    <%= link_to 'Leaderboard', leaderboard_tournament_path(@current_tournament) %>
                  </li>
                  <%# if @current_tournament.fifa2019? %>
                  <!-- <li> -->
                    <%#= link_to 'Knockout Board', leaderboard_tournament_path(@current_tournament, from: 'ko') %>
                  <!-- </li> -->
                  <%# end %>
                  <li><a href="#">Change Password</a></li>
                  <li class="divider"></li>
                  <li><%= link_to "Logout", destroy_user_session_path, method: :delete  %></li>
                </ul>
              </li>
          </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
<% end -%>
<div id="content">
  <%= yield %>
</div>
</body>
</html>
