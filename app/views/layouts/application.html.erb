<!DOCTYPE html>
<html>
<head>
  <title>FifaWorldCup2018</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %> fade in">
        <a href="#" data-dismiss="alert" class="close">Ã—</a>
        <%= value %>
      </div>
    <% end %>
  </div>
  <% if user_signed_in? %>
    <nav class="navbar navbar-inverse" role="navigation" style = 'margin-bottom: 1px;'>
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-megadropdown-tabs">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'Home', dashboard_index_path, class:'navbar-brand' %>
          <%= link_to @current_tournament.name, tournament_path(@current_tournament),
                                                class:'navbar-brand', style: 'color:#fff',
                                                data: { no_turbolink: true } %>
          <%= link_to 'Leaderboard', leaderboard_tournament_path(@current_tournament),
                                     class: 'navbar-brand', data: { no_turbolink: true } %>
          <%#= link_to 'Knockout Board', leaderboard_tournament_path(@current_tournament, from: 'ko'),
                                          class:'navbar-brand' %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-megadropdown-tabs">
          <ul class="nav navbar-nav">
            <!-- <li><a href="#"></a></li> -->
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.email %> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <%= link_to 'Leaderboard', leaderboard_tournament_path(@current_tournament),
                                             data: { no_turbolink: true } %>
                </li>
                <li>
                  <%= link_to 'Payment Details', payment_details_challenge_path,
                                                 data: { no_turbolink: true } %>
                </li>
                <li>
                  <%= link_to 'Total Payment', challenge_payments_challenge_path,
                                                       data: { no_turbolink: true } %>
                </li>
                <% if current_user.admin %>
                  <li>
                    <%= link_to 'Admin', '/admin' %>
                  </li>
                <% end %>
                <% if current_user.admin %>
                  <li>
                    <%= link_to 'Update Paid Status', show_user_challenges_challenge_path,
                                                      data: { no_turbolink: true } %>
                  </li>
                <% end %>
                <%# if @current_tournament.fifa2019? %>
                  <!-- <li> -->
                  <%#= link_to 'Knockout Board', leaderboard_tournament_path(@current_tournament, from: 'ko') %>
                  <!-- </li> -->
                  <%# end %>
                  <!-- <li><a href="#">Change Password</a></li>
                  <li><%#= link_to 'Change Password', edit_user_registration_path %></li> -->
                  <li class="divider"></li>
                  <li><%= link_to "Logout", destroy_user_session_path, method: :delete  %></li>
                </ul>
              </li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    <% end -%>
    <div id="content">
      <%= yield %>
    </div>
  </body>
</html>
