<%= image_tag(load_welcome_image, { id: 'full-screen-background-image' }) %>

<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-megadropdown-tabs">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand predikt-logo" href="#" title="PREDIKTNWIN" data-turbo="false">
        <%= image_tag('logo/logo.png') %>
      </a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-megadropdown-tabs">
      <ul class="nav navbar-nav">
        <li><a href="#"></a></li>
        <li class="dropdown mega-dropdown active">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t(:tournaments) %> <span class="caret"></span></a>
          <div class="dropdown-menu mega-dropdown-menu top_men_bg_color">
            <div class="container-fluid ">
              <!-- Tab panes -->
              <div class="tab-content">
                <div class="tab-pane active mega-dropdown-menu">
                  <ul class="nav-list list-inline">
                    <% @tournaments.each do |tournament| %>
                      <li class = 'padding_icons'>
                        <%= link_to tournament_path(tournament), data: { turbo: false } do %>
                          <%= image_tag("tournaments/#{tournament.image_name}", size: '90x60') %>
                          <span class="white_text"><%= tournament.name.upcase %></span>
                        <% end -%>
                      </li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
            <!-- Nav tabs -->
          </div>
        </li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.full_name %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <!-- <li><a href="#">My Points</a></li>
            <li><a href="#">Profile</a></li> -->
            <li><%= link_to t('menu.change_password'), edit_user_registration_path %></li>
            <li class="divider"></li>
            <% if current_user.admin %>
              <li>
                <%= link_to t('menu.admin'), '/admin', target: '_self' %>
              </li>
            <% end %>
            <li><%= link_to t('menu.logout'), destroy_user_session_path, method: :delete  %></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class="container add_opacity" id="content"></div>
<script type="text/javascript">
  setTimeout(function() {
    $('.alert').fadeOut(500);
  }, '800');
</script>
