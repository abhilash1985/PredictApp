<%- model_class = Prediction -%>
<%= image_tag('background/background2.jpeg', { id: 'full-screen-background-image', size: '1366x768' }) %>
<div class="page-header ind-body match-result text-center">
  <h4 class="prediction-results">
    <%=t '.title', default: "Payment Details" %>
  </h4>
</div>
<div class = "ind-body data-table">
<table class="table table-striped table-bordered text-center" id="payment_table">
  <thead>
    <tr class="background-white">
      <th class="text-center btn-success no-sort" data-orderable="false">Sl No</th>
      <th class="text-center btn-success">User</th>
      <th class="text-center btn-success">Total Predictions</th>
      <th class="text-center btn-success">Total Paid Predictions</th>
      <th class="text-center btn-success">Amount Paid</th>
      <th class="text-center btn-success">Matches Won</th>
      <th class="text-center btn-success">Amount Won</th>
      <th class="text-center btn-success">Account Balance</th>
      <th class="text-center btn-success">No.of Matches can be predicted</th>
    </tr>
  </thead>
  <tbody>
  	<% @payments.each_with_index do |payment, index| %>
  	 <% index += 1 %>
      <tr class="background-white">
      	<td class="text-center no-sort" data-orderable="false"><%= index %></td>
      	<td class="text-left"><%= payment.user.show_name %></td>
      	<td class="text-center"><%= payment.predictions %></td>
        <td class="text-center"><%= payment.paid_predictions %></td>
        <td class="text-center"><%= payment.amount_paid %></td>
        <td class="text-center"><%= payment.matches_won %></td>
        <td class="text-center"><%= payment.prize_won %></td>
        <td class="text-center"><%= payment.balance %></td>
        <td class="text-center"><%= payment.future_predictions %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
