<div class="page-header ind-body match-result text-center">
  <h3><%=t '.title', :default => "#{match.try(:full_name)} - #{match.match_date.to_s(:default)} - Points" %></h3>
</div>
<div class="ind-body data-table">
  <table class="table table-striped table-bordered text-center" id="predictions">
    <thead>
      <tr>
        <th valign="top" class="text-center">Sl No</th>
        <th valign="top" class="red" class="text-center">User</th>
        <th valign="top" class="red">Total Points</th>
        <th valign="top" class="color-blue">Points in %</th>
        <% match.match_questions.order(:id).each_with_index do |match_question, index| %>
          <th class="text-center">
            <div title="<%= match_question.question_name %>"><%= match_question.question_id_with_points(index) %></div>
          </th>
        <% end %>
      </tr>
    </thead>
    <tbody>
	  <% users.each_with_index do |user, index| %>
        <tr>
          <td class="text-center"><%= index + 1 %></td>
      	  <td class="text-center"><%= user.show_name %></td>
          <td class="red padding-left-15"><%= user.total_points_for_match(match) %></td>
          <td class="color-blue padding-left-15"><%= user.total_percentage_for_match(match) %></td>
      	  <% user.predictions_for_match(match).each do |prediction| %>
            <td class="class-bold padding-left-15 text-center <%= prediction.try(:style_class) %>">
              <%= prediction.try(:exact_answer) %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br />
